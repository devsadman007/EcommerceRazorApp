@page "{id:int}"
@model EcommerceRazorApp.Pages.Admin.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-lg border-0 rounded-4">

                <!-- Header -->
                <div class="card-header bg-danger text-white rounded-top-4">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Confirm Product Deletion
                    </h4>
                </div>

                <!-- Body -->
                <div class="card-body p-4">

                    <div class="alert alert-warning d-flex align-items-center">
                        <i class="bi bi-exclamation-circle-fill me-2"></i>
                        <div>
                            This action is permanent and cannot be undone.
                            Please review the details before deleting.
                        </div>
                    </div>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-semibold">Product Name</dt>
                        <dd class="col-sm-8">@Model.Product.Name</dd>

                        <dt class="col-sm-4 fw-semibold">Price</dt>
                        <dd class="col-sm-8">$@Model.Product.Price</dd>

                        <dt class="col-sm-4 fw-semibold">Category</dt>
                        <dd class="col-sm-8">
                            @(Model.Product.Category?.Name ?? "N/A")
                        </dd>
                    </dl>

                    <form method="post" class="d-flex justify-content-end gap-2">
                        <input type="hidden" asp-for="Product.ProductId" />

                        <a asp-page="Index" class="btn btn-outline-secondary px-4">
                            Cancel
                        </a>

                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash-fill me-1"></i>
                            Delete Product
                        </button>
                    </form>

                </div>

            </div>

        </div>
    </div>
</div>