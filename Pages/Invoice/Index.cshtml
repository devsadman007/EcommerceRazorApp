@page
@model InvoiceIndexModel
@{
    ViewData["Title"] = "Invoice";
}

<div class="container my-4">
    @if (Model.Order == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> Order not found.
        </div>
        <a asp-page="/Index" class="btn btn-primary">
            <i class="bi bi-house"></i> Go to Home
        </a>
    }
    else
    {
        <!-- Success Message -->
        <div class="alert alert-success alert-dismissible fade show">
            <h4 class="alert-heading">
                <i class="bi bi-check-circle"></i> Order Placed Successfully!
            </h4>
            <p class="mb-0">Thank you for your order. Your order number is <strong>#@Model.Order.OrderId</strong></p>
        </div>

        <!-- Invoice Card -->
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h3 class="mb-0">
                            <i class="bi bi-receipt"></i> Invoice
                        </h3>
                    </div>
                    <div class="col-md-6 text-end">
                        <button onclick="window.print()" class="btn btn-light">
                            <i class="bi bi-printer"></i> Print Invoice
                        </button>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <!-- Order Information -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5 class="text-primary">Order Information</h5>
                        <table class="table table-borderless table-sm">
                            <tr>
                                <td><strong>Order ID:</strong></td>
                                <td>#@Model.Order.OrderId</td>
                            </tr>
                            <tr>
                                <td><strong>Order Date:</strong></td>
                                <td>@Model.Order.OrderDate.ToString("MMMM dd, yyyy hh:mm tt")</td>
                            </tr>
                            <tr>
                                <td><strong>Status:</strong></td>
                                <td>
                                    <span class="badge bg-info">@Model.Order.Status</span>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-md-6">
                        <h5 class="text-primary">Customer Information</h5>
                        <table class="table table-borderless table-sm">
                            <tr>
                                <td><strong>Name:</strong></td>
                                <td>@Model.Order.CustomerName</td>
                            </tr>
                            <tr>
                                <td><strong>Email:</strong></td>
                                <td>@Model.Order.CustomerEmail</td>
                            </tr>
                            <tr>
                                <td><strong>Phone:</strong></td>
                                <td>@Model.Order.CustomerPhone</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!-- Shipping Address -->
                <div class="row mb-4">
                    <div class="col-md-12">
                        <h5 class="text-primary">Shipping Address</h5>
                        <address>
                            @Model.Order.ShippingAddress<br>
                            @Model.Order.City, @Model.Order.PostalCode<br>
                            @Model.Order.Country
                        </address>
                    </div>
                </div>

                <!-- Order Items -->
                <div class="mb-4">
                    <h5 class="text-primary mb-3">Order Items</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Product</th>
                                    <th class="text-center">Quantity</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int itemNumber = 1;
                                }
                                @foreach (var item in Model.Order.OrderItems)
                                {
                                    <tr>
                                        <td>@itemNumber</td>
                                        <td>@item.ProductName</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">$@item.Price.ToString("N2")</td>
                                        <td class="text-end">$@item.TotalPrice.ToString("N2")</td>
                                    </tr>
                                    itemNumber++;
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="4" class="text-end"><strong>Subtotal:</strong></td>
                                    <td class="text-end">$@Model.Order.TotalAmount.ToString("N2")</td>
                                </tr>
                                <tr>
                                    <td colspan="4" class="text-end"><strong>Grand Total:</strong></td>
                                    <td class="text-end"><strong class="text-success fs-5">$@Model.Order.TotalAmount.ToString("N2")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>

                <!-- Payment Information -->
                @if (Model.Order.Payment != null)
                {
                    <div class="row">
                        <div class="col-md-12">
                            <h5 class="text-primary mb-3">Payment Information</h5>
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <strong>Payment Method:</strong><br>
                                            <span class="badge bg-secondary">@Model.Order.Payment.PaymentMethod</span>
                                        </div>
                                        <div class="col-md-3">
                                            <strong>Payment Status:</strong><br>
                                            @if (Model.Order.Payment.PaymentStatus == "Completed")
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i> @Model.Order.Payment.PaymentStatus
                                                </span>
                                            }
                                            else if (Model.Order.Payment.PaymentStatus == "Pending")
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-clock"></i> @Model.Order.Payment.PaymentStatus
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle"></i> @Model.Order.Payment.PaymentStatus
                                                </span>
                                            }
                                        </div>
                                        <div class="col-md-3">
                                            <strong>Transaction ID:</strong><br>
                                            <small class="text-muted">@Model.Order.Payment.TransactionId</small>
                                        </div>
                                        <div class="col-md-3">
                                            <strong>Payment Date:</strong><br>
                                            @Model.Order.Payment.PaymentDate.ToString("MMM dd, yyyy")
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.Order.Payment.PaymentNotes))
                                    {
                                        <div class="mt-3">
                                            <strong>Notes:</strong> @Model.Order.Payment.PaymentNotes
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="card-footer bg-light">
                <div class="text-center">
                    <p class="mb-2">
                        <strong>Thank you for shopping with us!</strong>
                    </p>
                    <p class="text-muted small mb-0">
                        If you have any questions, please contact us at support@ecommerce.com or call +1 (555) 123-4567
                    </p>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="text-center mt-4">
            <a asp-page="/Index" class="btn btn-primary btn-lg">
                <i class="bi bi-house"></i> Continue Shopping
            </a>
        </div>
    }
</div>

@section Scripts {
    <style>
        @@media print {
            .no-print {
                display: none !important;
            }
            .card {
                border: none !important;
                box-shadow: none !important;
            }
        }
    </style>
}
