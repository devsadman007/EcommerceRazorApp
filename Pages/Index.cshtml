@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Welcome to Our Store!!!</h1>
                <p class="lead">Discover amazing products at unbeatable prices. Shop the latest trends in electronics, books, clothing, and home decor.</p>
                <a asp-page="/Products/Index" class="btn btn-light btn-lg">
                    <i class="bi bi-bag-check"></i> Shop Now
                </a>
            </div>
            <div class="col-lg-6">
                <img src="https://images.unsplash.com/photo-1557821552-17105176677c?w=600&h=400&fit=crop" alt="Shopping" class="img-fluid rounded">
            </div>
        </div>
    </div>
</div>

<!-- Featured Products Section -->
<div class="container mb-5">
    <h2 class="text-center mb-4">Featured Products</h2>

    @if (Model.FeaturedProducts.Any())
    {
        <div class="row g-4">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 shadow-sm">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <span class="badge bg-warning text-dark mb-2 align-self-start">Featured</span>
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted small">@product.Category.Name</p>
                            <p class="card-text flex-grow-1">
                                @if (!string.IsNullOrEmpty(product.Description))
                                {
                                    @(product.Description.Substring(0, Math.Min(60, product.Description.Length)))@:...
                                }
                            </p>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <h5 class="text-primary mb-0">$@product.Price.ToString("N2")</h5>
                                <div>
                                    <a asp-page="/Products/Details" asp-route-id="@product.ProductId" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <form method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@product.ProductId" />
                                        <button type="submit" asp-page-handler="AddToCart" class="btn btn-sm btn-primary">
                                            <i class="bi bi-cart-plus"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> No featured products available at the moment.
        </div>
    }
</div>

<!-- Call to Action -->
<div class="bg-light py-5">
    <div class="container text-center">
        <h3 class="mb-3">Ready to Start Shopping?</h3>
        <p class="lead mb-4">Browse our complete collection of products and find exactly what you need.</p>
        <a asp-page="/Products/Index" class="btn btn-primary btn-lg">
            <i class="bi bi-arrow-right-circle"></i> View All Products
        </a>
    </div>
</div>
